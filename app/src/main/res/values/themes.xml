<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="Theme.Finance" parent="Theme.Base">
        <item name="colorPrimaryLight">@color/purple_200</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorLightOnPrimary">@color/white_88</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorIncome">@color/light_green_600</item>
        <item name="colorPayment">@color/amber_600</item>
    </style>

    <style name="Theme.Finance.Home">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">@bool/not_on_night_mode</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
</resources>